# -------------------------------
# Step 1: Build the application
# -------------------------------
FROM maven:3.9.9-eclipse-temurin-17 AS builder

WORKDIR /app

# Copy pom.xml and download dependencies (better caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Package the Spring Boot JAR (skip tests for faster build)
RUN mvn clean package -DskipTests

# -------------------------------
# Step 2: Run the application
# -------------------------------
FROM eclipse-temurin:17-jdk

WORKDIR /app

# Copy only the JAR from builder
COPY --from=builder /app/target/frontend-1.0.0.jar app.jar

# Spring Boot runs on 8080 by default
EXPOSE 8080

# Run the app
ENTRYPOINT ["java", "-jar", "app.jar"]
